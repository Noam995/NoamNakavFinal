<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- כותרות רכב -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- אימייל (ממולא אוטומטית, לא ניתן לעריכה) -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="אימייל"
            android:enabled="false"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <!-- תעודת זהות -->
        <EditText
            android:id="@+id/etIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="תעודת זהות"
            android:inputType="number"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="12dp"/>

        <!-- כרטיס אשראי -->
        <EditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מספר כרטיס אשראי"
            android:inputType="number"
            android:maxLength="16"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCardExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="תוקף (MM/YY)"
            android:inputType="text"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etCvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:background="@drawable/bg_input"
            android:padding="14dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="24dp"/>

        <!-- כפתורים -->
        <Button
            android:id="@+id/btnConfirmPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אישור רכישה"
            android:background="@drawable/btn_primary"
            android:textColor="#EFE6E6"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnCreateMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="יצירת פגישה"
            android:background="@drawable/btn_primary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>