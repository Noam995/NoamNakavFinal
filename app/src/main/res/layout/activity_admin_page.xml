<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/bg_admin">

    <TextView
        android:id="@+id/tvAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דף מנהל"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="היסטוריית רכישות"
        android:textColor="#FFFFFF"
        android:onClick="salehistory"
        android:background="@drawable/btn_primary"
        app:layout_constraintTop_toBottomOf="@id/tvAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"/>

    <Button
        android:id="@+id/btnAddcar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הוספת מכונית"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="gotoAddnewcar"
        app:layout_constraintTop_toBottomOf="@id/btnHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnDeleteCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="מחק מכונית"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="DeleteCar"
        app:layout_constraintTop_toBottomOf="@id/btnAddcar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="דף משתמשים"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="gotoallUsers"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewMeetings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="צפה בפגישות"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="gotoMeetings"
        app:layout_constraintTop_toBottomOf="@id/btnUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnLogoutAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="התנתקות"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_primary"
        android:onClick="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>